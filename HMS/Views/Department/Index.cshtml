@model IEnumerable<HMS.Models.Department>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeaOfDepartment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactNumbers)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <!-- Search Form -->
        <form asp-action="Index" method="get">
            <input type="text" name="searchName" placeholder="Enter patient name" value="" />
            <button type="submit">Search</button>
            <button type="submit" formaction="@Url.Action("Index")">Reset</button>
        </form>

        <!-- Display Search Results -->
        
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeaOfDepartment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNumbers)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {
                    Id = item.Id, Name = item.Name, HeadofDepartment = item.HeaOfDepartment, 
                    ContactNumbers=item.ContactNumbers/* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { Id = item.Id, Name = item.Name, HeadofDepartment = item.HeaOfDepartment, ContactNumbers = item.ContactNumbers  /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "DeleteDepartment", new { Id = item.Id, Name = item.Name, HeaOfDepartment = item.HeaOfDepartment, ContactNumbers = item.ContactNumbers })
            </td>
        </tr>
}
    </tbody>
</table>
